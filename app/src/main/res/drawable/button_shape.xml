<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="60dip" />
        <stroke android:width="3dip" android:color="#e7a165" />
        <gradient android:angle="90" android:startColor="#dc7722" android:endColor="#f2caa9"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="60dip" />
        <stroke android:width="3dip" android:color="#e7a165" />
        <solid android:color="#e7a165"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="60dip" />
        <stroke android:width="3dip" android:color="#cb6e20" />
        <gradient android:angle="90" android:startColor="#874915" android:endColor="#cb6e20" />
    </shape>
</item>
</selector>